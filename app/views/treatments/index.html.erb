
<div class="container col-md-8">
<h1>Listing Treatments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @treatments.each do |treatment| %>
      <tr>
        <td><%= treatment.name %></td>
        <td><%= treatment.description %></td>
        <td><%= number_to_currency(treatment.price, :unit => "â‚¬ ") %></td>
        <% if employeesigned_in? %>
          <td><%= link_to 'Show', treatment %></td>
          <td><%= link_to 'Edit', edit_treatment_path(treatment) %></td>
          <td><%= link_to 'Destroy', treatment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if employeesigned_in? %>
	<%= button_to 'Apply Discount', discount_path, method: :get %></br>
	<%= button_to 'New Treatment', new_treatment_path %>
<% end %>
</div>