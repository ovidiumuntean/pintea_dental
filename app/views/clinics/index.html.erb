<p id="notice"><%= notice %></p>

<h1>Listing Clinics</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>County</th>
      <th>Postal code</th>
      <th>Country</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Date registred</th>
      <th>Director</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clinics.each do |clinic| %>
      <tr>
        <td><%= clinic.name %></td>
        <td><%= clinic.address1 %></td>
        <td><%= clinic.address2 %></td>
        <td><%= clinic.city %></td>
        <td><%= clinic.county %></td>
        <td><%= clinic.postal_code %></td>
        <td><%= clinic.country.name %></td>
        <td><%= clinic.phone %></td>
        <td><%= clinic.email %></td>
        <td><%= clinic.date_registred %></td>
        <td><%= clinic.employee.first_name %></td>
		<td><%= link_to 'Show', clinic %></td>
		<% if employeesigned_in? %>
			<td><%= link_to 'Edit', edit_clinic_path(clinic) %></td>
			<td><%= link_to 'Destroy', clinic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if employeesigned_in? %>
	<%= link_to 'New Clinic', new_clinic_path %>
<% end %>
