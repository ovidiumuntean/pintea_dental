<p id="notice"><%= notice %></p>
<div id="patient_main">
	<section id="patient_section">
		<div id="left_details">
			<p><strong>Name: </strong><%= @patient.first_name %></p>
			<p><strong>Cnp: </strong><%= @patient.cnp %></p>
			<p><strong>Surname: </strong><%= @patient.surname %></p>
			<p><strong>Gender: </strong><%= @patient.gender.name %></p>
			<p><strong>Age: </strong><%= age(@patient.birthday) %> years</p>
			<p><strong>Insurance: </strong><%= @patient.insurance %></p>
			<p><strong>Registration date: </strong><%= @patient.created_at %></p>
		</div>
		<div id="right_details">
			<p><strong>Address1: </strong><%= @patient.address1 %></p>
			<p><strong>Address2: </strong><%= @patient.address2 %></p>
			<p><strong>City: </strong><%= @patient.city %></p>
			<p><strong>County: </strong><%= @patient.county %></p>
			<p><strong>Postal code: </strong><%= @patient.postal_code %></p>
			<p><strong>Country: </strong><%= @patient.country.name %></p>
			<p><strong>Phone: </strong><%= @patient.phone %></p>
			<p><strong>Email: </strong><%= @patient.email %></p>
		</div>
	</section>	

		<section id="patient_section">
			<div id="left_details">
				<h2> Xray Files </h2>
				<table>
				  <thead>
					<tr>
					  <th>File Name</th>
					  <th>Date Added</th>
					</tr>
				  </thead>
				  <tbody>
					<% @patient.data_files.each do |data_file| %>
					  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
						<td><%= link_to data_file.name, data_file %></td>
					  </tr>
					<% end %>
				  </tbody>
				</table>
			</div>
			<div id="right_details">
				<h2> Appointments</h2>
				<table>
				  <thead>
					<tr>
					  <th>Date&Time</th>
					</tr>
				  </thead>

				  <tbody>
					<% @patient.appointments.each do |appointment| %>
					  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
						<td><%= appointment.date %></td>
					  </tr>
					<% end %>
				  </tbody>
				</table>
			</div>
		</section>
<br>
<%= link_to 'Edit', edit_patient_path(@patient) %> |
<%= link_to 'Back', patients_path %>
</div>