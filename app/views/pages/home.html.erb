	<div id="big_wrapper">
		<div id="new_div">
			<section id="main_section">
				<article>
					<div class="row">
							<div class="col-sm-13">
								<div id="my-slider" class="carousel slide" data-ride="carousel">
									<!-- indicators dot nov -->
									<ol class="carousel-indicators">
										<li data-target="my-slider" data-slide-to="0" class="active"></li>
										<li data-target="my-slider" data-slide-to="1"></li>
										<li data-target="my-slider" data-slide-to="2"></li>
										<li data-target="my-slider" data-slide-to="4"></li>
									</ol>
									
									<!-- wrapper for slides -->
									<div class="carousel-inner" role="listbox">
										<div class="item active">
											<%= image_tag('slide1.png',:size=>"1000x400") %>
											<div class="carousel-caption">
												<h1> Team </h1>
											</div>
										</div>
										<div class="item">
											<%= image_tag('slide2.png',:size=>"1000x400") %>
											<div class="carousel-caption">
												<h1> Cabinet </h1>
											</div>
										</div>
										<div class="item">
											<%= image_tag('slide3.png',:size=>"1000x400") %>
											<div class="carousel-caption">
												<h1> Team Members </h1>
											</div>
										</div>
										<div class="item">
											<%= image_tag('slide4.png',:size=>"1000x400") %>
											<div class="carousel-caption">
												<h1> Family </h1>
											</div>
										</div>
									</div>
									
									<!-- controlos or next and prev buttons -->
									<a class="left carousel-control" href="#my-slider" role="button" data-slide="prev">
										<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
										<span class="sr-only">Previous</span>
									</a>
									<a class="right carousel-control" href="#my-slider" role="button" data-slide="next">
										<span class="glyphicon glyphicon-chevron-right" area-hidden="true"></span>
										<span class="sr-only">Next</span>
									</a>
								</div>
							</div>
					</div>
				</article>
				
				<article>

					<div>
				        <div class="size_wrapper options_wrapper">
				                <div class="options">
				                    <% if signed_in?  or employeesigned_in? %>
				                    	<%= link_to appointment_treatments_path do %>
					                    	<h1> Appointment Treatments </h1>
					                	<% end %>
				                    	<%= link_to appointments_path do %>
					                    	<h1> Appointments </h1>
					                	<% end %>
					                	<%= link_to  new_appointment_path do %>
					                		<h1> New Appointment </h1>
					                	<% end %>
					                <% else %>
						                <%= link_to patients_registration_path do %>
						                    <h1> Register </h1>
						                <% end %>
						                <%= link_to login_path do %>
						  					<h1>Log In</h1>
										<% end %>
					                <% end %>
					                <% if employeesigned_in? %>
					                	<%= link_to  new_treatment_path do %>
					                		<h1> Add New Treatment </h1>
					                	<% end %>
					                	<%= link_to  new_tooth_path do %>
					                		<h1> Add New Tooth </h1>
					                	<% end %>
					                	<%= link_to  new_data_file_path do %>
					                		<h1> Add New Files </h1>
					                	<% end %>
					                	<%= link_to  new_patient_path do %>
					                		<h1> Add New Patient </h1>
					                	<% end %>
					                <% end %>
									<%= link_to treatments_path do %>
						  				<h1>Price List</h1>
									<% end %>
									<div class="clearer"></div>
           						</div>
                    	</div>
    				</div>
					<footer>
						<p> -- Developed by Ovidiu --</p>
					</footer>
				</article>
			</section>

			<aside id="side_news">
				<h4>News</h4>
				<p>New website will be launch soon</p>
			</aside>
		</div>
		
		<footer id="the_footer">
			Copyright Pintea Dental
		</footer>
	</div>

