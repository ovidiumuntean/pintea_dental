<section id="reg_section">
  <div class="box_form">
    <%= bootstrap_form_for(@employee, layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-8") do |f| %>
      <% if @employee.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

          <ul>
          <% @employee.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.text_field :first_name, style: 'float: right;' %>
      </div>
      <div class="field">
        <%= f.text_field :surname, style: 'float: right;' %>
      </div>
      <div class="field">
        <%= f.collection_select :gender_id, Gender.all, :id, :name %>
      </div>
      <div class="field">
        <%= f.date_select :birthday, { :include_blank => true, :start_year => 1960} %>
      </div>
      <div class="field">
        <%= f.text_field :job_title %>
      </div>
      <div class="field">
        <%= f.date_select :hire_date %>
      </div>
      <div class="field">
        <%= f.text_field :address1 %>
      </div>
      <div class="field">
        <%= f.text_field :address2 %>
      </div>
      <div class="field">
        <%= f.text_field :city %>
      </div>
      <div class="field">
        <%= f.text_field :county %>
      </div>
      <div class="field">
        <%= f.text_field :postal_code %>
      </div>
      <div class="field">
        <%= f.collection_select :country_id, Country.all, :id, :name %>
      </div>
      <div class="field">
        <%= f.text_field :phone %>
      </div>
      <div class="field">
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.collection_select :clinic_id, Clinic.all, :id, :name %>
      </div>
      <div class="field">
        <%= f.password_field :password %>
      </div>
    	<div class="field">
        <%= f.password_field :password_confirmation %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</section>
